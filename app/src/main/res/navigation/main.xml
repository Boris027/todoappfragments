<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main.xml"
    app:startDestination="@id/listTaskView">

    <fragment
        android:id="@+id/listTaskView"
        android:name="com.example.todoappremaster.ui.ListTaskView"
        android:label="fragment_list_task_view"
        tools:layout="@layout/fragment_list_task_view" >
        <action
            android:id="@+id/action_listTaskView_to_addtask"
            app:destination="@id/addtask" />
        <action
            android:id="@+id/action_listTaskView_to_updatetask"
            app:destination="@id/updatetask" />
    </fragment>
    <fragment
        android:id="@+id/addtask"
        android:name="com.example.todoappremaster.ui.addtask"
        android:label="fragment_addtask"
        tools:layout="@layout/fragment_addtask" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/updatetask"
        android:name="com.example.todoappremaster.ui.updatetask"
        android:label="updatetask" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>